         |  float hue = ((argb >> 16) & 255) / 255.0f;
         |  float saturation = ((argb >> 8) & 255) / 255.0f;
         |  float value = (argb & 255) / 255.0f;
         |
         |  if (saturation)
         |  {
         |    float r, g, b;
         |    hue *= 6;
         |    int i = (int)hue;
         |    float f = hue - i;
         |    float p = value * (1 - saturation);
         |    float q = value * (1 - saturation * f);
         |    float t = value * (1 - saturation * (1 - f));
         |    switch (i)
         |    {
         |      case 0:
         |          r = value;
         |          g = t;
         |          b = p;
         |          break;
         |      case 1:
         |          r = q;
         |          g = value;
         |          b = p;
         |          break;
         |      case 2:
         |          r = p;
         |          g = value;
         |          b = t;
         |          break;
         |      case 3:
         |          r = p;
         |          g = q;
         |          b = value;
         |          break;
         |      case 4:
         |          r = t;
         |          g = p;
         |          b = value;
         |          break;
         |      default:
         |          r = value;
         |          g = p;
         |          b = q;
         |          break;
         |    }
         |
         |    *data = a | ((int)(r*255+0.5))<<16 | ((int)(g*255+0.5))<<8 | ((int)(b*255+0.5));
         |  }
         |  else
         |  {
         |    int v = (int)(value * 255 + 0.5);
         |    *data = a | (v<<16) | (v<<8) | v;
         |  }
         |}

    method execute( ignore_repeat_count:Int )
      if (not ImageList.selected) return
      apply

endClass

